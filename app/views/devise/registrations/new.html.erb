<%= devise_error_messages! %>
<div class="sign-in">
  <div class="row">
    <div class="col-xs-6 offset-xs-3">
      <div class="form">
        <div class="card">
          <div class="card-block">
            <h4 class="card-title">Sign up</h4>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <div class="field form-group">
                <%= f.label "Full name", class: "form-control-label" %><br />
                <%= f.text_field :name, autofocus: true, class: "form-control" %>
              </div>

              <div class="field form-group">
                <%= f.label :email, class: "form-control-label" %><br />
                <%= f.email_field :email, autofocus: true, class: "form-control" %>
              </div>

              <div class="form-group">
                <%= f.label 'gender_male' do %>
                  <%= f.radio_button :gender, 'male', :checked => true %> Male
                <% end %>
                <%= f.label 'gender_female', {style: 'margin-left: .9em'} do %>
                  <%= f.radio_button :gender, 'female' %> Female
                <% end %>
              </div>

              <div class="field form-group">
                <%= f.label "Phone number", class: "form-control-label" %><br />
                <%= f.telephone_field :phone, autofocus: true, class: "form-control" %>
              </div>

              <div class="field form-group">
                <%= f.label :password, class: "form-control-label" %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "off" , class: "form-control" %>
              </div>

              <div class="actions form-group">
                <%= f.submit "Sign up", class: "btn btn-primary" %>
                <%= link_to user_facebook_omniauth_authorize_path, class: "btn btn-default fb-btn" do %>
                  <i class="fa fa-facebook fa-lg" aria-hidden="true"></i> Login
                <% end %>
              </div>
              <div class="form-group">
                <%= link_to "Already have account", new_session_path(resource_name), style: "margin-left: .5em" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
