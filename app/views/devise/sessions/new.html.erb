<div class="sign-in">
  <div class="row">
    <div class="col-xs-6 offset-xs-3">
      <div class="form">
        <div class="card">
          <div class="card-block">
            <h4 class="card-title">Sign in</h4>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="field form-group">
                <%= f.label :email, class: "form-controll-label" %><br />
                <%= f.email_field :email, autofocus: true, class: "form-control" %>
              </div>

              <div class="field form-group">
                <%= f.label :password, class: "form-controll-label" %><br />
                <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
              </div>

              <% if devise_mapping.rememberable? -%>
                <div class="field form-group">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </div>
              <% end %>

              <div class="actions form-group">
                <%= f.submit "Sign in", class: "btn btn-primary" %>
                <%= link_to user_facebook_omniauth_authorize_path, class: "btn btn-default fb-btn" do %>
                  <i class="fa fa-facebook fa-lg" aria-hidden="true"></i> Login
                <% end %>
              </div>
              <div class="form-group">
                <%= link_to "Create new account", new_registration_path(resource_name) %><br>
                <%= link_to "Forgot your password?", new_password_path(resource_name) %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
